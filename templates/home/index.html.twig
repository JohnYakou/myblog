{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <section class="container m-5">
        <div class="row">
            {% for article in articles %}
                <div class="card col-md-3 m-2" style="width: 18rem;">
                    <img src="{{article.photo}}" class="card-img-top" alt="image">
            
                    <div class="card-body">
                        <h5 class="card-title">{{article.titre}}</h5>
                        <p class="card-text">{{article.description}}</p>
                        <a href="#" class="btn btn-primary">{{article.auteur}}</a>
                        <br>
                        <span>{{article.publication | date("d/m/y")}}</span>
                        <br>
                        {# BOUTON POUR SUPPRIMER EN RELIANT app_article_delete DANS ArticleController.php #}
                        <a class="btn btn-danger" href="{{path('app_article_delete', {id:article.id})}}">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
